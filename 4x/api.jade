doctype html
html(lang='my')
  head
    title Express - api reference
    include ../includes/head
  body
    section.content
      header
        - active = 'api'
        include ../includes/header
      include ../includes/mixins
      include ./my/api/menu
      #overlay

      #api-doc

        h1 4.x API

        h2 Application
        a(id='application').h2
        section
          h3(id='express') express()
          include:md ./my/api/express.md
        include ./my/api/app

        h2 Request
        a(id='request').h2
        include ./my/api/req

        h2 Response
        a(id='response').h2
        include ./my/api/res

        h2 Router
        a(id='router').h2
        include ./my/api/router

        h2 Middleware
        a(id='middleware').h2
        include ./my/api/middleware

    include ../includes/footer
